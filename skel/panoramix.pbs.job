#!/bin/bash
#PBS -q batch

#PBS -l nodes=4
# PBS -l nodes=bn002:ppn=4

#PBS -l walltime=6:00:00

echo $PBS_JOBID

cd $PBS_O_WORKDIR

mpiexec -f $PBS_NODEFILE ./lesgo-mpi-binary > lesgo.out

# Copy this file before it is over-written
cp lesgo.out lesgo.out.$PBS_JOBID

