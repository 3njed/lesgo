&geometry
nx = 32
ny = 32
nz = 33
L_x = 4.
L_y = 4.
L_z = 2000.
z_i = 1000.
&end

&tparam
dt = 2e-4 ! dt=2.e-4 usually works for 64^3
nsteps = 1
&ends

!--Coriolis stuff
! coriol=non-dim coriolis parameter,
! ug=horiz geostrophic vel, vg=transverse geostrophic vel
! u_star=0.45 if coriolis_forcing=.FALSE. and =ug if coriolis_forcing=.TRUE.
&coriolis
coriolis_forcing = .false.
u_star = 0.45
Pr = 0.4
&end

&io
c_count=2000
p_count=2000
cs_count = 5 !--tsteps between dynamic Cs updates
output=.true.
use_avgslice = .true.
read_inflow_file = .false.
write_inflow_file = .false.
jt_start_write = 6  !--records at position jx_s
&end

!--initu = true to read from a file; false to create with random noise
!--initlag = true to initialize cs, FLM & FMM; false to read from vel.out
&ic
initu = .false.
inilag = .true.
&end

&pparam
use_bldg = .false.
molec = .false.
sgs = .true. 
dns_bc = .false.
nu_molec = 1.14e-5 ! nu_molec is dimensional m^2/s
&end

!Model type: 1->Smagorinsky; 2->Dynamic; 3->Scale dependent
!            4->Lagrangian scale-sim   5-> Lagragian scale-dep
!Models type: 1->static prandtl, 2->Dynamic
!Cs is the Smagorinsky Constant
!Co and nnn are used in the mason model for smagorisky coeff
&les
model = 5
models = 1
nnn = 2
Co = 0.16
ifilter = 2 !Test filter type: 1->cut off 2->Gaussian 3->Top-hat
&end

&bc
!--prescribed inflow: constant or read from file
!  read from file is not working properly
inflow = .true.
use_fringe_forcing = .false,
lbc_mom = 'wall' !--'wall', 'stress free'
ubc=1 ! ubc: upper boundary condition: ubc=0 stress free lid, ubc=1 sponge
&end
